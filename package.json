{
  "name": "figstack",
  "version": "0.0.1",
  "type": "module",
  "description": "Figstack is a framework-agnostic, Vite-powered build tool for Figma plugins development. It abstracts postMessage plumbing so you can import and call code-side logic like standard UI functions.",
  "bin": {
    "figstack": "./dist/cli.mjs"
  },
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "test": "tsx ./scripts/test-runner.ts",
    "check": "biome check",
    "fix": "biome check --fix",
    "release": "pnpm run fix && pnpm run build && changelogen --release --push --publish"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/jakub-hajduk/figstack"
  },
  "author": {
    "name": "Jakub Hajduk",
    "email": "devhajduk@gmail.com"
  },
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.13.4",
    "changelogen": "^0.5.7",
    "dotenv": "^16.4.7",
    "glob": "^11.0.1",
    "tsdown": "^0.20.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "import": "./dist/cli.mjs",
      "require": "./dist/cli.cjs"
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "citty": "^0.2.1",
    "jiti": "^2.6.0",
    "magicast": "^0.5.2",
    "vite-plugin-singlefile": "^2.3.0"
  },
  "peerDependencies": {
    "figwire": "^0.0.3",
    "vite": "^7.3.1"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts"
}
